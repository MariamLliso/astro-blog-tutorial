---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <Header title={frontmatter.title} />

  <div class="info">
    <p>
      ✏️ Written by <b>{frontmatter.author}</b> | Published on: {
        frontmatter.pubDate.slice(0, 10)
      }
    </p>

    <ul class="tagList">
      {frontmatter.tags.map((tag: string) => <li class="tag">{tag}</li>)}
    </ul>
  </div>

  <slot />
</BaseLayout>

<style>
  p {
    margin: 0;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 20px;
    background-color: #f2f2f2;
    border-radius: 10px;
  }

  ul {
    margin: 0;
    padding: 0;
  }

  .tagList {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 2rem;
  }

  .tag {
    color: white;
    text-transform: uppercase;
    font-size: 0.8rem;
    background-color: #6a8920;
    padding: 0px 20px;
    border-radius: 50px;
  }
</style>
